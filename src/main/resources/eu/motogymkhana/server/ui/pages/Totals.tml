<html t:type="layout" title="Moto Gymkhana"
      t:sidebarTitle="Framework Version"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter">
        <!-- Most of the page content, including <head>, <body>, etc. tags, comes from Layout.tml -->

<h2>${title}</h2>
<p>${resultCode} ${message}</p>
<table><tr><td>

  <div class="eg">
      <t:form t:id="form" class="form-inline">
            <div class="form-group">
      <p>
        
           <span class="dateHeader">${season} Season Totals</span>
      </p>
         </div>
   
      </t:form>
       </div>
</td><td>
<p>
     <t:pagelink page="index" context="round.number" class="links">Start List</t:pagelink>
     <t:pagelink page="results" context="round.number" class="links">Results</t:pagelink>
	 <t:pagelink page="index"  context="[country, otherSeason, round.number]" class="links">${otherSeason}</t:pagelink>
</p>
</td></tr></table>

	        <t:eventlink t:id="refreshZone"  style="display: none;">Hidden EventLink</t:eventlink>

 <t:zone t:id="resultsZone" id="resultsZone">
<p>${text}</p>

<table class="table" >

		<tr><th class='points'></th><th class='points'></th>
		<th class='points'></th>
		<th class='points'></th>
		<th class='points'>1</th>
		<th class='points'>2</th>
		<th class='points'>3</th>
		<th class='points'>4</th>
		<th class='points'>5</th>
		<th class='points'>6</th>
		<th class='points'>7</th>
		<th class='points'>8</th>
		<th class='points'>points</th>
		</tr>

       	<t:loop source="riders" value="rider" formState="iteration">
       	<tr>  
       	<td class='points' bgcolor = '${rider.bibColor}'> 		${rider.position} </td>
      	<td class='points'> 		${rider.country} </td>
      	<td class='points'> 		${rider.gender} </td>
       	<td class='name'> 			${rider.fullName}</td>   
       	<td class='points'> 		${rider.points(0)} </td>
      	<td class='points'> 		${rider.points(1)} </td>
     	<td class='points'> 		${rider.points(2)} </td>
     	<td class='points'> 		${rider.points(3)} </td>
     	<td class='points'> 		${rider.points(4)} </td>
     	<td class='points'> 		${rider.points(5)} </td>
     	<td class='points'> 		${rider.points(6)} </td>
     	<td class='points'> 		${rider.points(7)} </td>
     	<td class='points'> 		${rider.totalPoints} </td>
 
        </tr>
		</t:loop>
</table>
</t:zone>


</html>
